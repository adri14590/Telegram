    <capability android:name="actions.intent.GET_THING">
        <intent>
            <url-template android:value="tg://search{?query}" />
            <parameter android:key="query" android:name="thing.name" android:required="true"/>
        </intent>
        <intent>
            <url-template android:value="tg://search" />
        </intent>
    </capability>
    <capability android:name="actions.intent.CREATE_CALL">
        <intent>
		    <url-template android:value="tg://call{?format,name,phone}" />
            <parameter android:key="format" android:name="call.callFormat"/>
            <parameter android:key="name" android:name="call.participant.name"/>
            <parameter android:key="phone" android:name="call.participant.telephone"/>
        </intent>
    </capability>
    <capability android:name="actions.intent.GET_ACCOUNT">
        <intent>
		    <url-template android:value="tg://settings" />
        </intent>
    </capability>
    <capability android:name="actions.intent.GET_BARCODE">
        <intent>
		    <url-template android:value="tg://scanqr" />
        </intent>
    </capability>
    <capability android:name="actions.intent.CREATE_CONTACT_POINT">
        <intent>
		    <url-template android:value="tg://addcontact{?name,phone}" />
            <parameter android:key="name" android:name="contactPoint.contact.name"/>
            <parameter android:key="phone" android:name="contactPoint.telephone"/>
        </intent>
    </capability>
    <capability android:name="actions.intent.GET_CALL">
        <intent>
		    <url-template android:value="tg://calllog" />
        </intent>
    </capability>
